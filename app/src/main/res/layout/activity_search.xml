<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBEB"
    android:orientation="vertical">
    <LinearLayout
        android:padding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_arrow_back"
            android:id="@+id/goToBack"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Tìm kiếm sản phẩm"

          />

    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/trend_search"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lableTrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ khóa hot"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_below="@+id/lableTrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà phê lúa mạch đá"
            android:textColor="@color/black"
            android:background="#E8E3E3"></TextView>

        <TextView
            android:id="@+id/txt2"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/lableTrend"
            android:layout_toRightOf="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà phê lúa mạch nóng"
            android:textColor="@color/black"
            android:background="#E8E3E3"></TextView>
        <TextView
            android:id="@+id/txt3"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socola lúa mạch đá xay"
            android:textColor="@color/black"
            android:background="#E8E3E3"></TextView>

        <TextView
            android:id="@+id/txt4"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/txt1"
            android:layout_toRightOf="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socola lúa mạch nóng"
            android:textColor="@color/black"
            android:background="#E8E3E3"></TextView>
        <TextView
            android:id="@+id/txt5"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macca phủ socola"
            android:textColor="@color/black"
            android:background="#E8E3E3"></TextView>
    </RelativeLayout>

</LinearLayout>